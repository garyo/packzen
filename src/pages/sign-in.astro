---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sign In - PackZen">
  <div class="flex min-h-screen items-center justify-center bg-gray-50 px-4 py-12">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-3xl font-bold text-gray-900">Welcome Back</h1>
        <p class="text-gray-600">Sign in to access your packing lists</p>
      </div>

      <div id="clerk-sign-in" class="rounded-lg bg-white p-6 shadow-md"></div>
    </div>
  </div>
</BaseLayout>

<script>
  import { getClerk } from '../lib/clerk';

  async function initSignIn() {
    const clerk = await getClerk();

    clerk.mountSignIn(document.getElementById('clerk-sign-in')!, {
      afterSignInUrl: '/dashboard',
      signUpUrl: '/sign-up',
    });
  }

  initSignIn();
</script>
