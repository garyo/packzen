---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sign Up - PackZen">
  <div class="flex min-h-screen items-center justify-center bg-gray-50 px-4 py-12">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-3xl font-bold text-gray-900">Get Started</h1>
        <p class="text-gray-600">Create your account to start packing smarter</p>
      </div>

      <div id="clerk-sign-up" class="rounded-lg bg-white p-6 shadow-md"></div>
    </div>
  </div>
</BaseLayout>

<script>
  import { getClerk } from '../lib/clerk';

  async function initSignUp() {
    const clerk = await getClerk();

    clerk.mountSignUp(document.getElementById('clerk-sign-up')!, {
      afterSignUpUrl: '/dashboard',
      signInUrl: '/sign-in',
    });
  }

  initSignUp();
</script>
