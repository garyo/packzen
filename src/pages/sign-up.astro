---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sign Up - PackZen">
  <div class="flex min-h-screen items-center justify-center bg-gray-50 px-4 py-12">
    <div class="w-full max-w-md">
      <div class="mb-8 text-center">
        <h1 class="mb-2 text-3xl font-bold text-gray-900">Get Started</h1>
        <p class="text-gray-600">Create your account to start packing smarter</p>
      </div>

      <div id="clerk-sign-up" class="rounded-lg bg-white p-6 shadow-md"></div>
    </div>
  </div>
</BaseLayout>

<script>
  import { getClerk } from '../lib/clerk';

  async function initSignUp() {
    const clerk = await getClerk();

    // If user is already signed in, redirect to dashboard
    if (clerk.user) {
      window.location.href = '/dashboard';
      return;
    }

    // Read redirect_url from query string
    const params = new URLSearchParams(window.location.search);
    const redirectUrl = params.get('redirect_url');

    clerk.mountSignUp(document.getElementById('clerk-sign-up')!, {
      signInUrl: redirectUrl
        ? `/sign-in?redirect_url=${encodeURIComponent(redirectUrl)}`
        : '/sign-in',
      fallbackRedirectUrl: redirectUrl || '/dashboard',
    });
  }

  initSignUp();
</script>
